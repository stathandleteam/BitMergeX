{
    "manifest_version":3,
    "name": "Bitmergex Wallet Extension",
    "description": "A Stacks wallet Chrome extension",
    "icons": {
        "32": "vite.svg"
    },
    "version": "1.0.0",
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "vite.svg"
    },
    "permissions": [
        "scripting",
        "storage"

    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]   
}